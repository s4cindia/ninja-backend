run = "npm run dev"
entrypoint = "src/index.ts"
modules = ["nodejs-20", "postgresql-16"]
hidden = [".config", "package-lock.json", ".git"]

[nix]
channel = "stable-23_11"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[env]
NODE_OPTIONS = "--max-old-space-size=4096"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[userenv]

[userenv.shared]
ENABLE_WORKERS = "false"
EPUBCHECK_PATH = "/home/runner/workspace/lib/epubcheck/epubcheck.jar"
